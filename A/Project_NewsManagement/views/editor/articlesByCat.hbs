
<div class="table-responsive ">
    <div class="card shadow mb-4 h-100" >
  <table class="table table-hover ">
        <thead >
            <tr>
            </tr>
        </thead>
        <tbody>
            {{#each articles}}
                <tr>
                    <td>
                        <img class="box-list-item-img" src="{{ArtAvatar}}" alt="List user">
                    </td>
                    <td>
                        <div class="box-list-item-text ">
                            <h3 class="Title">{{ArtTitle}}</h3>
                            <p class="Summary">{{Summary}}</p>
                        </div>
                    </td>
                    
                    <td class="text-right">
                        <div class="box-list-item-text ">
                        <a  class="btn btn-success btn-sm" href="/editor/accept/{{ArtID}}" role="button" title="Edit">
                        <i class="fa fa-check" aria-hidden="true"></i>
                            Duyệt bài
                        </a>
                        </div>
                    </td>
                    <td class="text-right">
                        <div class="box-list-item-text ">
                        <a  class="btn btn-warning btn-sm" href="/editor/decline/{{ArtID}}" role="button" title="Edit">
                        <i class="fa fa-times" aria-hidden="true"></i>
                            Từ chối 
                        </a>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
</div>
<div class="col-sm-12">
    <nav aria-label="Page navigation example">
        <ul class="pagination pagination-circle pg-blue justify-content-center">
            {{#each page_numbers}}
            {{#if active}}
            {{#ifeq value 1}}
            
                <li class="page-item disabled"><a class="page-link">First</a></li>
                <li class="page-item disabled">
                    <a class="page-link"  aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                    </a>
                </li>
            {{else}}
            
                <li class="page-item ">
                    <a class="page-link" href="?page=1">First</a>
                </li>
                <li class="page-item ">
                    <a class="page-link"  href="?page={{previous ../../curPage}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                    </a>
                </li>
            
            {{/ifeq}}
            {{/if}}
            {{/each}}

            {{#each page_numbers}}
            {{#if active}}
                <li class="page-item active">
                    <span class="page-link">{{value}}
                    <span class="sr-only">(current)</span>
                    </span>
                </li>
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                </li>
            {{/if}}
            {{/each}}

            {{#each page_numbers}}
            {{#if active}}
            {{#ifeq value ../page_numbers.length}}
            
            <li class="page-item disabled">
            <a class="page-link"  aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
            </li>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            {{else}}
            <li class="page-item">
            <a class="page-link" href="?page={{next ../../curPage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?page={{../../page_numbers.length}}">Last</a>
            </li>
            {{/ifeq}}
            {{/if}}
            {{/each}}
        </ul>
    </nav>
</div> 