{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(() => {
        $('#forget-password-form').validate({
            rules: {
                Username: {
                    required: true,
                    email: true,
                    remote: {
                        url: '/account/username-is-unavailable',
                        data: {
                            username: () => {
                                return $('#txtUsername').val();
                            }
                        }
                    }
                }
            },
            messages: {
                Username: {
                    required: 'Vui lòng nhập địa chỉ email.',
                    email: 'Địa chỉ email không hợp lệ.',
                    remote: 'Địa chỉ email không tồn tại.'
                }
            },
            errorElement: 'p',
            errorClass: 'input-errors'
        });
    });
</script>
{{/section}}

<div id="register-user" class="mx-auto mt-4">
    <form id="forget-password-form" class="default-form" method="POST">
        <label class="label-form">Địa chỉ email:</label>
        <input class="input-form" name="Username" id="txtUsername" type="text" placeholder="Địa chỉ email">
        <button class="button-form">Gửi mã xác nhận</button>
    </form>
</div>