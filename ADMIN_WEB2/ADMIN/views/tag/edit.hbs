  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
  <script src="/js/Tag.Check.js"></script>  
  </head>
<body>
  <h2>Chỉnh sửa nhãn</h2>
  <form action="/admin/tag/update" method="POST" id="frmNhan" style="width:400px;margin:0 auto;">
    <input type="hidden" name="TagID" value="{{this.Tag.TagID}}"></input>
    <div>
       <label >TÊN NHÃN</label>
       <input class="form-control" placeholder="Nhập tên nhãn" type="text" name="TagName" id="txtTagName" value="{{this.Tag.TagName}}">
   </div>
     <button type="submit" class="btn btn-primary loginFormElement" style="width:100%;margin-top:20px;">CẬP NHẬT</button>
  </form>
</body>
</html>
