<div id="articles-wrapper">
    <h2>Kết quả tìm kiếm</h2>
    <h5>Từ khóa tìm kiếm: {{keyword}}</h6>
    <p class="search-result">{{total}} kết quả phù hợp</p>
    <div class="row margin-0">
        {{#each articles}}
        <div class="col-12 article">
            <a href="/article/{{ArtID}}"><img src="{{ArtAvatar}}" class="w-100"></a>
            <div class="newest-article-title">
                {{#ifeq RankID 2}}
                <a class="premium-article-link" href="/article/premium">
                    <span class="premium-article">PREMIUM</span>
                </a>
                {{/ifeq}}
                <a href="/article/{{ArtID}}" class="title-article">{{ArtTitle}}</a>
                <div>
                    <span class="date-article">{{formatArticleDateTime ArtPostedOn}}</span>
                    <span class="category-article">
                        <a href="#">{{SubCatName}}</a>
                    </span>
                </div>
                <p class="summary-article">{{Summary}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row">
        <div class="col-12">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link previous-page {{#if previousInactive}}page-is-inactive{{/if}}" {{#unless previousInactive}}href="?keyword={{keyword}}&page={{previous page}}"{{/unless}} aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {{#each totalPages}}
                    <li class="page-item">
                        <a class="page-link {{#if active}}page-is-active{{/if}}" href="?keyword={{../keyword}}&page={{value}}">{{value}}</a>
                    </li>
                    {{/each}}
                    <li class="page-item">
                        <a class="page-link next-page {{#if nextInactive}}page-is-inactive{{/if}}" {{#unless nextInactive}}href="?keyword={{keyword}}&page={{next page}}"{{/unless}} aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

