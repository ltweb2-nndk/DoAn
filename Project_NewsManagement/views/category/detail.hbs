<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chi tiết danh mục</title>
 <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>
<body>
  <h2>{{CatName}}</h2>
  <a href="/admin/category/detail/{{CatID}}/add?CatName={{CatName}}" class="btn btn-success" style="float: left;margin-bottom:5px;margin-top:10px;">Thêm Chuyên Đề</a>
  <table class="table table-bordred table-striped">
    <thead>
      <tr>
        <th>Mã chuyên đề</th>
        <th>Tên chuyên đề</th>
        <th>Trạng thái</th>
        <th>Cập nhật</th>
        <th>Xóa</th>
      </tr>
    </thead>
    <tbody>
    {{#each this.subcategories}}
    <form  action="/admin/subCategory/delete" method="POST">
      <tr>
        <input type="hidden" name="CatID" value="{{CatID}}">
        <input type="hidden" name="CatName" value="{{../CatName}}">
        <th><input type="hidden" name="SubCatID" value="{{SubCatID}}"></input>{{SubCatID}}</th>
        <th>{{SubCatName}}</th>
        <th>{{#ifeq SubCatIsActive 1}} Hoạt động {{/ifeq}} {{#ifeq SubCatIsActive 0}} Không hoạt động  {{/ifeq}} </th>
        <th><a href="/admin/subCategory/edit/{{SubCatID}}?CatName={{../CatName}}" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a></th>
        <th><button  class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button></th>
      </tr>
      </form>
      {{/each}}
    </tbody>
  </table>
</body>
</html>