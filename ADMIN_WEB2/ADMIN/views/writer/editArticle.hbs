
<form class="mr-3 " action=""  method="POST">
        <div class="form-group row">
            <label for="ArtID" class="col-sm-2 col-form-label">Mã bài</label>
            <div class="col-sm-10">
                <input type="text"  class="form-control" value="{{this.articles.ArtID}}" id="ArtID" name="ArtID" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="categories" class="col-sm-2 col-form-label">Chuyên mục</label>
            <div class="col-sm-10">
                <select class="form-control" name="SubCatID">
                  {{#if articles.ArtID}}
                  {{#each this.lcSubCategories}}
                    {{#ifeq ../articles.SubCatID SubCatID }}
                        <option value={{../SubCatID}} selected>{{../SubCatName}}</option>
                    {{else}}
                        <option value={{../SubCatID}} >{{../SubCatName}}</option>
                    {{/ifeq}}
                  {{/each}}
                  {{/if}}
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label">Tiêu đề</label>
            <div class="col-sm-10">
                <input type="text" value={{this.articles.ArtTitle}}  class="form-control" id="ArtTitle" name="ArtTitle">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="summary" class="col-sm-2 col-form-label">Tóm tắt</label>
            <div class="col-sm-10">
                <textarea id="Summary" name="Summary" class="form-control" >{{this.articles.Summary}}</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="tag" class="col-sm-2 col-form-label">Nhãn bài</label>
            <div class="col-sm-10">
                <textarea class="form-control font-weight-bold" id="TagID" name="TagID">
                    {{#each this.artTags}}{{TagName}}, {{/each}}
                </textarea>    
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Trạng thái bài viết</label>
            <div class="col-sm-10">
                {{#if articles.ArtID}}
                {{#each this.lcStatus}}
                    {{!-- {{#ifeq ../articles.StatusID lcStatus.StatusID }} --}}
                    {{#ifeq ../articles.StatusID StatusID }}
                            {{!-- <input type="radio" name="StatusID" id={{../lcStatus.StatusName}} value={{../lcStatus.StatusID}} checked>{{../lcStatus.StatusName}} --}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="StatusID" id={{../StatusName}} value={{../StatusID}} checked>
                            <label class="form-check-label" for={{../StatusName}}>{{../StatusName}}</label>
                        </div>
                    {{else}}             
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="StatusID" id={{../StatusName}} value={{../StatusID}}>
                            <label class="form-check-label" for={{../StatusName}}>{{../StatusName}}</label>
                        </div>
                    {{/ifeq}}
                {{/each}}
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Xếp hạng bài viết</label>
            <div class="col-sm-10">
                {{#if articles.ArtID}}
                {{#each this.lcRank}}
                    {{#ifeq ../articles.RankID RankID }}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="RankID" id={{../RankName}} value={{../RankID}} checked>
                            <label class="form-check-label" for={{../RankName}}>{{../RankName}}</label>
                        </div>
                    {{else}} 
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="RankID" id={{../RankName}} value={{../RankID}} >
                            <label class="form-check-label" for={{../RankName}}>{{../RankName}}</label>
                        </div>
                    {{/ifeq}}
                {{/each}}
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="contentArt" class="col-sm-2 col-form-label">Nội dung</label>
            <div class="col-sm-10">
                <textarea  name="Content"  class="w-100" id="Content" >{{articles.Content}}</textarea>
            </div>
        </div>
        <script>
            CKEDITOR.replace("Content",{
                "extraPlugins" : 'imagebrowser',
		        "imageBrowser_listUrl" : "/files",
            });
        </script>
         {{#with user}}
        <input value={{WriterID}} name="WriterID" hidden>
        {{/with}}
        <div class="form-group row float-right mr-3">
            <button type="submit" class="btn btn-danger mr-3" >Cập nhật bài viết</button>
        </div>
        
    </form>