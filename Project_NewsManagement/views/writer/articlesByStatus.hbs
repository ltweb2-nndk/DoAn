
<div class="table-responsive ">
    <div class="card shadow mb-4 h-100" >
<table class="table table-hover">
        <thead>
        </thead>
        <tbody>

            {{#each this.articles}}
                <tr>
                    <td>
                        <img class="box-list-item-img" src="{{ArtAvatar}}" alt="List user">
                    </td>
                    <td>
                        <div class="box-list-item-text ">
                            {{#checkStatus StatusID}}
                            <h3><a href="/writer/edit/{{../ArtID}}" title="Edit">{{../ArtTitle}}</a></h3>
                            {{else}}
                            <h3>{{../ArtTitle}}</h3>
                            {{/checkStatus}}
                            <p>{{Summary}}</p>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
</div>
<div class="col-sm-12">
    <nav aria-label="Page navigation example">
        <ul class="pagination pagination-circle pg-blue justify-content-center">
            {{#each page_numbers}}
            {{#if active}}
            {{#ifeq value 1}}
            
                <li class="page-item disabled"><a class="page-link">First</a></li>
                <li class="page-item disabled">
                    <a class="page-link"  aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                    </a>
                </li>
            {{else}}
            
                <li class="page-item ">
                    <a class="page-link" href="?page=1">First</a>
                </li>
                <li class="page-item ">
                    <a class="page-link"  href="?page={{previous ../../curPage}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                    </a>
                </li>
            
            {{/ifeq}}
            {{/if}}
            {{/each}}

            {{#each page_numbers}}
            {{#if active}}
                <li class="page-item active">
                    <span class="page-link">{{value}}
                    <span class="sr-only">(current)</span>
                    </span>
                </li>
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                </li>
            {{/if}}
            {{/each}}

            {{#each page_numbers}}
            {{#if active}}
            {{#ifeq value ../page_numbers.length}}
            
            <li class="page-item disabled">
            <a class="page-link"  aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
            </li>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            {{else}}
            <li class="page-item">
            <a class="page-link" href="?page={{next ../../curPage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?page={{../../page_numbers.length}}">Last</a>
            </li>
            {{/ifeq}}
            {{/if}}
            {{/each}}
        </ul>
    </nav>
</div>

